    <!--查询布局-->
    <RelativeLayout
        android:id="@+id/third_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/second_rel">

        <!--"站站查询"图片按钮-->
        <ImageButton
            android:id="@+id/bt_zzcx"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/zzcx" />

        <!--"车次查询"图片按钮-->
        <ImageButton
            android:id="@+id/bt_cccx"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/bt_zzcx"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/cccx" />

        <!--"车站查询"图片按钮-->

        <ImageButton
            android:id="@+id/bt_czcx"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/czcx" />

        <!--"站次添加"图片按钮-->

        <ImageButton
            android:id="@+id/bt_tjgn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@id/bt_czcx"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/zctj" />

    </RelativeLayout>
    
    
